    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 ITIF Syuhada - SMP IT Masjid Syuhada. Semua hak cipta dilindungi.</p>
            <p style="margin-top: 0.5rem; font-size: 0.9rem; opacity: 0.7;">
                Belajar teknologi dengan hati yang baik 💚
            </p>
        </div>
    </footer>

    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Form submission handler
        document.querySelector('.contact-form form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get form data
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Create WhatsApp message with parent-friendly language
            const message = `
Assalamualaikum, Ustadz/Ustadzah 🙏

Saya ingin mendaftarkan anak saya untuk ikut kegiatan ITIF Syuhada:

👨‍👩‍👧‍👦 Nama Orang Tua: ${data.parent_name}
👶 Nama Anak: ${data.child_name}  
📱 No. WhatsApp: ${data.phone}
🎒 Kelas: ${data.class}

${data.message ? `💭 Pesan: ${data.message}` : ''}

Mohon informasinya tentang kegiatan ini. Terima kasih! 😊
            `;
            
            // Open WhatsApp with the message (ganti nomor sesuai kebutuhan)
            const whatsappUrl = `https://wa.me/62XXXXXXXXXX?text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, '_blank');
            
            // Reset form
            this.reset();
            alert('Terima kasih! Anda akan dialihkan ke WhatsApp untuk chat dengan pembina kami. 😊');
        });

        // Add navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.style.background = 'rgba(255, 255, 255, 0.98)';
            } else {
                navbar.style.background = 'rgba(255, 255, 255, 0.95)';
            }
        });

        // Add animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'slideInUp 0.6s ease-out forwards';
                }
            });
        }, observerOptions);

        // Observe all cards and sections
        document.querySelectorAll('.program-card, .team-card, .benefit-card, .point-card').forEach(card => {
            observer.observe(card);
        });

        // Add some fun interactions
        document.querySelectorAll('.program-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                const icon = this.querySelector('.program-icon');
                icon.style.transform = 'scale(1.1) rotate(5deg)';
                icon.style.transition = 'transform 0.3s ease';
            });
            
            card.addEventListener('mouseleave', function() {
                const icon = this.querySelector('.program-icon');
                icon.style.transform = 'scale(1) rotate(0deg)';
            });
        });

        // Welcome message for parents
        setTimeout(function() {
            console.log('Selamat datang di ITIF Syuhada! 🎉');
            console.log('Website ini dibuat khusus untuk Ayah Bunda yang ingin anaknya belajar teknologi dengan cara yang menyenangkan dan Islami.');
        }, 2000);
    </script>
</body>
</html>